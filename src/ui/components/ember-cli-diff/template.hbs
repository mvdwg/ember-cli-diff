<div id="form-container">
  <div class="container">
    <form>
      <select id="from" data-placeholder="From" onchange={{action loadVersion 'from'}}>
        <option></option>
      </select>

      <select id="to" data-placeholder="To" onchange={{action loadVersion 'to'}}>
        <option></option>
      </select>

      <button id="submit" onclick={{action load}}> See changes </button>
    </form>
  </div>
</div>

<div class="container">
  {{#if hasSelection}}
    <p>
      Displaying the changes between versions <strong>{{from}}</strong> and <strong>{{to}}</strong>
      <br>
      <a id="download" class="diff" download href="{{downloadDiffUrl}}">Download diff</a>
    </p>

    <div id="diff"></div>
  {{else}}
    <zero-state />
  {{/if}}
</div>
